<%- include("./header.ejs") %>
<body>
    <div class="main-container">
        <!-- Left section for search bar and filters -->
        <div class="search-filter-container">
            <h1>Inventory Report</h1>

            <form action="./sale_orders.ejs" method="post">
                <!-- search bar -->
                <input type="text" name="search_term" placeholder="Search by make or model..." />

                <!-- filters -->
                <label for="start_date_dropdown">Start Date</label>
                <select name="start_date_dropdown" id="start_date_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder add option</option>
                </select>

                <label for="end_date_dropdown">End Date</label>
                <select name="end_date_dropdown" id="end_date_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>
                
                <label for="employee_dropdown">Sales Person</label>
                <select name="employee_dropdown" id="employee_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="branch_dropdown">Branch</label>
                <select name="branch_dropdown" id="branch_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="make_dropdown">Make</label>
                <select name="make_dropdown" id="make_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="model_dropdown">Model</label>
                <select name="model_dropdown" id="model_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="min_year_dropdown">Minimum Production Year</label>
                <select name="min_year_dropdown" id="min_year_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="max_year_dropdown">Maximum Production Year</label>
                <select name="max_year_dropdown" id="max_year_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="min_mile_dropdown">Minimum Mileage</label>
                <select name="min_mile_dropdown" id="min_mile_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>

                <label for="max_mile_dropdown">Maximum Mileage</label>
                <select name="max_mile_dropdown" id="max_mile_dropdown">
                    <option value="" selected></option>
                    <option value="">placeholder</option>
                </select>
            </form>
        </div>

        <!-- Sorting Form -->
        <form id="sort_form" action="/inventory" method="get" style="display: none;">
            <input type="hidden" name="sort" id="sort_input">
        </form>

        <!-- Table Section -->
        <div class="report-section">
            <table>
                <thead>
                    <tr>
                        <th>
                            Buyin Date
                            <button type="button" onclick="sortTable('buyin_date')"> <%= sorting.buyin_date === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            VIN
                            <button type="button" onclick="sortTable('VIN')"> <%= sorting.VIN === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Make
                            <button type="button" onclick="sortTable('make')"> <%= sorting.make === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Model
                            <button type="button" onclick="sortTable('model')"> <%= sorting.model === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Year
                            <button type="button" onclick="sortTable('year')"> <%= sorting.year === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Mileage
                            <button type="button" onclick="sortTable('mileage')"> <%= sorting.mileage === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Buyin Price
                            <button type="button" onclick="sortTable('buyin_price')"> <%= sorting.buyin_price === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Sales Name
                            <button type="button" onclick="sortTable('sales_person_name')"> <%= sorting.sales_person_name === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                        <th>
                            Store Branch
                            <button type="button" onclick="sortTable('store_branch')"> <%= sorting.store_branch === 'asc' ? '↑' : '↓' %> </button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% records.forEach(record => { %>
                        <tr>
                            <td><%= record.buyin_date %></td>
                            <td><%= record.VIN %></td>
                            <td><%= record.make %></td>
                            <td><%= record.model %></td>
                            <td><%= record.year %></td>
                            <td><%= record.mileage %></td>
                            <td>$<%= record.buyin_price %></td>
                            <td><%= record.sales_person_name %></td>
                            <td><%= record.store_branch %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        function sortTable(column) {
            const currentOrder = document.getElementById('sort_input').value;
            const newOrder = currentOrder === column + '_asc' ? column + '_desc' : column + '_asc';
            document.getElementById('sort_input').value = newOrder;
            document.getElementById('sort_form').submit();
        }
    </script>
</body>
</html>


<%- include("../header") %>
<body>
  <div class="reports_container">
    <div class="reports_sidebar"><%- include("./reports_sidebar") %></div>

    <div class="reports_content">
      <form action="./sale_report" method="post">
        <div>
          <% if (status === 'success') { %>
          <h4>Sale report submitted successfully!</h4>
          <% } %>
        </div>

        <div class="form-row">
          <label for="vin">VIN</label>
          <input type="text" name="vin" id="vin" />
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="make">Make</label>
            <input type="text" name="make" id="make" />
          </div>
          <div class="form-col">
            <label for="model">Model</label>
            <input type="text" name="model" id="model" />
          </div>
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="year">Year</label>
            <input type="number" name="year" id="year" />
          </div>
          <div class="form-col">
            <label for="mileage">Mileage</label>
            <input type="number" name="mileage" id="mileage" />
          </div>
        </div>
        <div class="form-row">
          <label for="sale_date">Sale Date</label>
          <input type="datetime-local" name="sale_date" id="sale_date" />
        </div>
        <div class="form-row">
          <label for="sale_price">Sale Price</label>
          <input type="number" name="sale_price" id="sale_price" />
        </div>
        <button type="submit">Submit</button>
      </form>
    </div>
  </div>
</body>
